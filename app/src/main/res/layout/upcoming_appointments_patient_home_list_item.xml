<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_doctor_name_upcoming_appointments_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Dr. Ahmed Mostafa"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_doctor_specialty_upcoming_appointments_home"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Audiology"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_name_upcoming_appointments_home"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name_upcoming_appointments_home" />

        <TextView
            android:id="@+id/tv_time_upcoming_appointments_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="10:00 am"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/img_time_upcoming_appointments_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_time_upcoming_appointments_home"
            app:layout_constraintTop_toTopOf="@+id/img_time_upcoming_appointments_home" />

        <TextView
            android:id="@+id/tv_date_upcoming_appointments_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="14-05-2023"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/img_date_upcoming_appointments_home"
            app:layout_constraintStart_toEndOf="@+id/img_date_upcoming_appointments_home"
            app:layout_constraintTop_toTopOf="@+id/img_date_upcoming_appointments_home" />

        <ImageView
            android:id="@+id/img_date_upcoming_appointments_home"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_specialty_upcoming_appointments_home"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_specialty_upcoming_appointments_home"
            app:srcCompat="@drawable/calendar_month_icon" />

        <ImageView
            android:id="@+id/img_time_upcoming_appointments_home"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/tv_date_upcoming_appointments_home"
            app:layout_constraintTop_toTopOf="@+id/tv_date_upcoming_appointments_home"
            app:srcCompat="@drawable/available_time_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>