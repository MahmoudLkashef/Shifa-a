<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_doctor_completed_appointments"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/doctor_female" />

        <TextView
            android:id="@+id/tv_doctor_name_completed_appointments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Karma Mohamed"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_doctor_completed_appointments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_doctor_completed_appointments"
            app:layout_constraintTop_toTopOf="@+id/img_doctor_completed_appointments" />

        <TextView
            android:id="@+id/img_time_canceled_appointments_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_outline_rectangle_button"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Completed"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view_line_completed_appointments"
            app:layout_constraintEnd_toEndOf="@+id/tv_doctor_name_completed_appointments"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name_completed_appointments" />

        <View
            android:id="@+id/view_line_completed_appointments"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_doctor_completed_appointments" />

        <ImageView
            android:id="@+id/img_calender_completed_appointments_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/view_line_completed_appointments"
            app:layout_constraintTop_toBottomOf="@+id/view_line_completed_appointments"
            app:srcCompat="@drawable/appointments" />

        <TextView
            android:id="@+id/tv_date_completed_appointments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="10 Jan 2023"
            app:layout_constraintBottom_toBottomOf="@+id/img_calender_completed_appointments_icon"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/img_calender_completed_appointments_icon"
            app:layout_constraintTop_toTopOf="@+id/img_calender_completed_appointments_icon" />

        <ImageView
            android:id="@+id/img_time_completed_appointments_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_calender_completed_appointments_icon"
            app:layout_constraintStart_toEndOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/img_calender_completed_appointments_icon"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/tv_completed_appointments_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="11:30 AM"
            app:layout_constraintBottom_toBottomOf="@+id/img_time_completed_appointments_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_time_completed_appointments_icon"
            app:layout_constraintTop_toTopOf="@+id/img_time_completed_appointments_icon" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book_again_completed_appointments"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_outlined_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Book Again"
            android:textAllCaps="false"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_calender_completed_appointments_icon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_leave_a_review"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_filled_rounded_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Leave a Review"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/btn_book_again_completed_appointments" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>