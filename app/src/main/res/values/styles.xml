<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_main_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sign_in_text_size_large</item>
    </style>

    <!-- Radio button style -->
    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>
    <!-- Radio button style -->
</resources>