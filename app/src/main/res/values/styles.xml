<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="doctor_signup_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

        <style name="main_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sign_in_text_size_large</item>
    </style>

    <style name="button_main_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sign_in_text_size_large</item>
    </style>



    <!-- Radio button style -->
    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="onboarding_skip_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="onboarding_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Radio button style -->

    <!--date dialog background-->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/main_color</item>
    </style>
    <!--date dialog background-->

</resources>